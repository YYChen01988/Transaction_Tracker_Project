<form  action="/transactions/<%= @transaction.id%>" method="post">

  <label for="amount"> Amount: </label>
  <input id= "amount" type="number" name="amount" value="<%= @transaction.amount%>">
  <br/>
  <br/>

  <label for="merchant"> Merchant: </label>
  <select id="merchants" name="merchant_id">
    <% @merchants.each do |merchant| %>
    <% if merchant.id == @transaction.merchant_id %>
      <option selected value="<%= merchant.id %>">
        <%= merchant.store_name %>
      </option>
      <% else %>
      <option value="<%= merchant.id %>">
        <%= merchant.store_name %>
      </option>
      <% end %>
    <% end %>
  </select>
  <br/>
  <br/>

  <label for="tags">Transaction Tag: </label>
  <select id="tags" name="tag_id">
    <% @tags.each do |tag| %>
    <% if tag.id == @transaction.tag_id %>
      <option selected value="<%= tag.id %>">
        <%= tag.type %>
      </option>
      <% else %>
      <option value="<%= tag.id %>">
        <%= tag.type %>
      </option>
      <% end %>
    <% end %>
  </select>

  <br/>
  <br/>

  <label for="time"> Transaction Time: </label>
  <input id="time"  name="transaction_time" value= <%= @transaction.transaction_time() %> readonly>
<br/>
<br/>

  <input type="submit" value="Confirm Changes">



</form>
